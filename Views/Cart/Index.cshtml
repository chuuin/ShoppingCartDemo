@model IEnumerable<ShoppingCartDemo.Models.CartItem>

@{
    ViewData["Title"] = "購物車";
}

<h2>購物車</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">購物車目前是空的。</div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>商品</th>
                <th>單價</th>
                <th>數量</th>
                <th>小計</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>$@item.Product.Price</td>
                    <td>@item.Quantity</td>
                    <td>$@(item.Product.Price* item.Quantity)</td>
                    <td>
                        <a asp-action="Remove" asp-route-id="@item.Product.Id"
                           class="btn btn-sm btn-danger">移除</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-end">
        <h4>總金額: $@Model.Sum(i => i.Product.Price * i.Quantity)</h4>
        <a class="btn btn-success">結帳</a>
    </div>
}
