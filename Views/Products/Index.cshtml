@model IEnumerable<ShoppingCartDemo.Models.product>

@{
    ViewData["Title"] = "商品列表";
}

<h2>商品列表</h2>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="@item.lmageUrl" class="card-img-top" alt="@item.Name" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text text-muted">價格: $@item.Price</p>

                    <div class="mb-2">
                        <label>數量:</label>
                        <input type="number" id="qty-@item.Id" value="1" min="1" class="form-control" style="width:70px; display:inline-block;" />
                    </div>
                    <button class="btn btn-primary add-to-cart" data-productid="@item.Id">加入購物車</button>
                    <span id="msg-@item.Id" class="text-success ms-2"></span>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.add-to-cart').click(function (e) {
                e.preventDefault(); // 防止頁面跳轉

                var button = $(this);
                var productId = button.data('productid');
                var quantity = $('#qty-' + productId).val();

                $.ajax({
                    url: '@Url.Action("AddToCart", "Cart")',
                    type: 'POST',
                    data: {
                        productId: productId,
                        quantity: quantity
                    },
                    success: function (result) {
                        $('#msg-' + productId).text('已加入購物車！').fadeIn().delay(1000).fadeOut();
                    },
                    error: function () {
                        $('#msg-' + productId).text('加入失敗').fadeIn().delay(1000).fadeOut();
                    }
                });
            });
        });
    </script>
}
